<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fi.aalto.legroup.achso.browsing.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:theme="@style/Theme.AchSo.Toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="fi.aalto.legroup.achso.browsing.BrowserFragment"
        android:id="@+id/fragment_search_video"
        tools:layout="@layout/fragment_video_browser" />
</LinearLayout>
