        <item name="colorPrimary">@color/teal_800</item>
        <item name="colorPrimaryDark">@color/teal_900</item>
        <item name="colorAccent">@color/red_A400</item>

        <!-- TODO: Figure out a solution for the text colour and change the background someday -->
